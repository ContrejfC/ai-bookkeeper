{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python3 -m uvicorn app.api.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "web",
      "serviceName": "ai-bookkeeper-web-staging"
    },
    {
      "name": "worker",
      "serviceName": "ai-bookkeeper-worker-staging",
      "startCommand": "python3 -m rq.cli worker -u $REDIS_URL default"
    }
  ]
}

